<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/hosts_panel_encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12sp"
        android:layout_marginLeft="12sp"
        android:layout_marginEnd="12sp"
        android:layout_marginRight="12sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:text="@string/hosts_panel_encabezado"
        android:textSize="23sp"/>

    <ListView
        android:id="@+id/hosts_panel_lista_de_hosts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6sp"
        android:layout_alignStart="@+id/hosts_panel_encabezado"
        android:layout_alignLeft="@+id/hosts_panel_encabezado"
        android:layout_alignEnd="@+id/hosts_panel_encabezado"
        android:layout_alignRight="@+id/hosts_panel_encabezado"/>
</RelativeLayout>